<?xml version="1.0"?>
<ruleset name="Dude Coding Standards">
    <!-- See https://github.com/digitoimistodude/dude-coding-standards -->

    <!-- Set a description for this ruleset. -->
    <description>Dude coding standards for WordPress.</description>

    <!-- Pass some flags to PHPCS:
         p flag: Show progress of the run.
         s flag: Show sniff codes in all reports.
         v flag: Print verbose output.
         n flag: Do not print warnings.
     -->
     <arg value="psvn"/>

     <!-- Only check PHP files. -->
     <arg name="extensions" value="php"/>

     <!-- Check all files in this directory and the directories below it. -->
     <file>.</file>

     <!-- Exclude wp, content, and media directories -->
     <exclude-pattern>wp/*</exclude-pattern>
     <exclude-pattern>content/languages/*</exclude-pattern>
     <exclude-pattern>media/*</exclude-pattern>
     <exclude-pattern>*/blocks/*/build/*</exclude-pattern>

     <!-- Use Dude Coding Standards -->
     <rule ref="DCS"/>

     <!-- Include sniffs for PHP cross-version compatibility. -->
     <config name="testVersion" value="8.3"/>
     <rule ref="PHPCompatibility"/>
</ruleset>
